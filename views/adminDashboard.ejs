          <li><a href="#" class="nav-link px-2 link-dark">About</a></li>
        </ul>

        <div class="col-md-3 text-end">
          <button type="button" class="btn btn-outline-primary me-2">Login</button>
          <button type="button" class="btn btn-primary">Sign-up</button>
        </div>
      </header>
    </div>

    <a href="/addAdmin">Add to line</a>


    <table class="table">
      <thead>
        <tr>
          <th scope="col">Time Checked In</th>
          <th scope="col">Phone Number</th>
          <th scope="col">Company Name</th>
          <th scope="col">Description of work</th>
          <th scope="col">Equipment</th>
          <th scope="col">Status</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>

        <% currentLine.forEach(function(element){ %>
        <tr>
          <th scope="col"><%= element.timeCheckedIn %></th>
          <th scope="col"><%= element.phoneNumber %></th>
          <th scope="col"><%= element.companyName %></th>
          <th scope="col"><%= element.description %></th>
          <th scope="col"><%= element.equipment %></th>
          <th scope="col"><%= element.workStatus %>
            <form class="" action="adminDashboard" method="post">

              <div class="">
                <select name="statusSelected" id="statusSelectedId">
                  <option disabled selected value="">Update status:</option>
                  <option value="Checked in">Checked in</option>
                  <option value="In process">In process</option>
                  <option value="Compleated">Compleated</option>
                  <hidden name="id" value="<%= element._id %>">
                </select>
              </div>

              <div class="">
                <input hidden type="text" name="id" value="<%= element._id %>">
              </div>
              <button type="submit">UPDATE</button>
            </form>

          </th>
          <th scope="col">

            <form class="" action="delete" method="post">
              <input hidden type="text" name="id" value="<%= element._id %>">
              <button type="submit"><i class="bi bi-trash"></i></button>
            </form>

          </th>
        </tr>
        <% }) %>
      </tbody>
    </table>



